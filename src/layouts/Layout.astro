---
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
import WhatsApp from '../components/WhatsApp.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
const description = "Agencia especializada en Marketing digital con experiencia en el ramo inmobiliario, automotriz y tur√≠stico.";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description}/>
		<meta name="viewport" content="width=device-width"/>
		<link rel="icon" type="image/png" href="/favicon.png"/>
		<meta name="generator" content={Astro.generator}/>
		<title>{title}</title>
		<script src="https://kit.fontawesome.com/3cf3afd2bb.js" crossorigin="anonymous"></script>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
		<link rel="stylesheet" href="/styles/global.css" />
		<link rel="canonical"href="https://coeurmkt.com" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/images/coeur-mkt-img.jpeg" />
		<meta property="og:url" content="permailink" />
	</head>
	<body>
		
		<Navbar />
		<slot />
		<Footer />
		<WhatsApp />
		<script is:inline src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
		<script is:inline src="../../app.js"></script>
	</body>
</html>