---
import { getCollection } from 'astro:content';

const posts = (await getCollection('servicios')).sort();
---

<div class="bg-gray-100">
<section class=" container w-11/12 mx-auto py-20">

<div class="mx-auto max-w-screen-xl px-4 py-6 sm:px-6 lg:px-8">

    <div class="max-w-xl">
        <h2 class="text-3xl text-[#f93348] font-bold sm:text-5xl">SERVICIOS</h2>
    </div>

    <div class="swiper mySwiper4 pt-12">
        <div class="swiper-wrapper">
            {
                posts.map((post) => (
                <div class="swiper-slide ">
                <div class="flex h-full flex-col justify-between">
                        <div class="relative h-[85vh]">
                            <img src={post.data.heroImage} class="absolute h-full w-full object-cover"/>

                            <div class="absolute inset-0 bg-black/0 from-black/70 to-transparent bg-gradient-to-b bg-gradient-to-t"></div>

                        </div>

                        <div class="absolute top-0 bottom-0 left-0 right-0 flex items-end px-6 p-10 lg:p-20">
                            <div class="mx-auto w-11/12  max-w-screen-xl text-center lg:text-left z-10">
                                <h3 class="text-3xl font-bold text-white [text-shadow:_0_1px_0_rgb(0_0_0_/_40%)]">{post.data.title}</h3>
                                <p class="text-lg font-light text-white [text-shadow:_0_1px_0_rgb(0_0_0_/_40%)]">{post.data.description}</p>
                            </div>
                        </div>
                                        
                    </div>
                </div>
                ))
            }
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-next "></div>
        <div class="swiper-button-prev"></div>
    </div>
</div>
</section>
</div>

