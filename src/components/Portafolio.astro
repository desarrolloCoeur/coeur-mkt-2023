---
import { getCollection } from 'astro:content';

const posts = (await getCollection('portafolio')).sort();

---

<section class=" my-12 container w-11/12 mx-auto">
    <div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
        <h3 class="text-center text-[#f93348] font-bold text-5xl pb-3">PORTAFOLIO</h3>
        <p class="text-center text-lg pb-12 font-light">A continuaci√≥n mostramos algunos ejemplos relacionados con branding emocional:</p>
        <div class="grid lg:grid-cols-2 grid-cols-1 gap-6">
        {
            posts.map((post) => (
            <article>
                <a href={``} class="group relative block bg-black">
                    <div class="relative h-[350px] sm:h-[450px]">
                        <img width={720} height={360} src={post.data.heroImage} class="absolute inset-0 h-full w-full object-cover opacity-75 transition-opacity group-hover:opacity-50"  />
                    </div>
                    <div class="absolute inset-0 flex flex-col items-start justify-end p-6 ">
                        <h3 class="text-xl font-medium text-white ">{post.data.title}</h3>
                        <p class="text-ms font-light text-white">{post.data.services}</p>
                        
                    </div>
                </a>           
            </article>
        
            ))
        }
        </div>
    </div>
</section>


